{
  "name": "carbon",
  "version": "1.0.0",
  "description": "",
  "type": "module",
  "main": "index.ts",
  "types": "index.ts",
  "scripts": {
    "lint": "eslint . --ext ts,tsx --cache",
    "format": "prettier --write .",
    "release": "release-it",
    "prepare": "husky install",
    "typecheck": "tsc --noEmit"
  },
  "keywords": [],
  "author": "Fernando Berti <me@berti.sh>",
  "license": "MIT",
  "devDependencies": {
    "@types/node": "^20.10.6",
    "hydrogen": "github:carbonyde/hydrogen#1.1.0"
  },
  "dependencies": {
    "@hono/node-server": "^1.4.0",
    "@mdx-js/node-loader": "^3.0.0",
    "dayjs": "^1.11.10",
    "hono": "^3.12.0",
    "htmx.org": "^1.9.10",
    "pino": "^8.17.2",
    "pino-pretty": "^10.3.1",
    "rehype-autolink-headings": "^7.1.0",
    "rehype-pretty-code": "^0.12.3",
    "rehype-slug": "^6.0.0",
    "remark-gfm": "^4.0.0",
    "remark-toc": "^9.0.0",
    "tailwindcss": "^3.4.0",
    "tsx": "^4.7.0"
  },
  "release-it": {
    "git": {
      "commitMessage": "chore: release v${version}"
    },
    "github": {
      "release": true
    },
    "npm": {
      "skipChecks": true,
      "publish": false
    },
    "plugins": {
      "@release-it/conventional-changelog": {
        "preset": "conventionalcommits",
        "infile": "changelog.md"
      }
    }
  }
